<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.truekenyan.orderfood">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".StartActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".InfoActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".BookingActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".InfoActivity"/>
        <activity android:name=".ConfirmationActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".BookingActivity"/>
        <activity android:name=".AddActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".ConfirmationActivity"/>
        <activity android:name=".SuccessActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".AddActivity"/>
    </application>

</manifest>